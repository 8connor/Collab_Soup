<br>
<div class="container">
    <div class="columns">
        <div class="column is-full-mobile">
            <div class="box">
                <div class="columns">
                    <div class="column is-2-desktop is-half-mobile is-offset-one-quarter-mobile">
                        <figure class="image">
                            <img src="{{ user.picture }}">
                        </figure>
                    </div>
                    <div>
                        <div class="column content is-medium is-2 is-half-mobile is-offset-one-quarter-mobile">
                            <h1>
                                {{ user.firstname }} {{ user.lastname }}
                            </h1>
                        </div>
                    </div>
                </div>

                <div class="columns">
                    <div class="tabs is-centered is-boxed">
                        <ul>
                            <li class="is-active" id="aboutSec">
                                <a>
                                    <span class="icon is-small"><i class="fas fa-user" aria-hidden="true"></i></span>
                                    <span>About</span>
                                </a>
                            </li>
                            <li class="" id="projectSec">
                                <a>
                                    <span class="icon is-small"><i class="fas fa-ruler" aria-hidden="true"></i></span>
                                    <span>Projects</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="box" id="info">
                    <div class="columns">

                        <div class="column">

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                        </th>
                                        <th>
                                            Developer Info
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>email:</td>
                                        <td>{{user.email}}</td>
                                    </tr>
                                    <tr>
                                        <td>linkedIn:</td>
                                        <td>{{user.linkedin}}</td>
                                    </tr>
                                    <tr>
                                        <td>github:</td>
                                        <td>{{user.github}}</td>
                                    </tr>
                                    <tr>
                                        <td>about:</td>
                                        <td>{{user.about}}</td>
                                    </tr>
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>

                <div class="box" id="projInfo">
                    <div class="columns">

                        <div class="column user_proj_data">

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

