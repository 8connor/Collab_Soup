<div class="box">
    <div class="columns is-centered">
        <div class="control has-icons-left">
            <input class="input is-large" id="accountEmail" type="email" placeholder="Email">
            <span class="icon is-medium is-left">
                <i class="fas fa-envelope"></i>
            </span>
        </div>
    </div>

    <div class="columns is-centered">
        <div class="control has-icons-left">
            <input class="input is-large" id="emailConfirm" type="email" placeholder="Retype email">
            <span class="icon is-medium is-left">
                <i class="fas fa-envelope"></i>
            </span>
        </div>
    </div>

    <div class="columns is-centered">
        <div class="field">
            <p class="control has-icons-left">
                <input class="input is-large" id="accountPassword" type="password" placeholder="Password">
                <span class="icon is-large is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
    </div>

    <div class="columns is-centered">
        <div class="field">
            <p class="control has-icons-left">
                <input class="input is-large" id="passwordConfirm" type="password" placeholder="Retype password">
                <span class="icon is-large is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
    </div>
</div>

<div class="columns is-centered has-text-danger">
    <p id="accountConfirm"></p>
</div>

<div class="columns is-centered">
    <button class="button is-success" id="accountCreate">Submit</button>
</div>